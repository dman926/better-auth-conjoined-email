{
  "name": "@dman926/better-auth-conjoined-email",
  "license": "MIT",
  "version": "1.0.0",
  "author": "Dennis James Stelmach <dj@dstelmach.com>",
  "description": "Send a conjoined authentication email using multiple authentication methods at once",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dman926/better-auth-conjoined-email.git"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "pnpm build",
    "test": "vitest",
    "test:e2e": "playwright test",
    "lint": "eslint",
    "clean": "rm ./src/*.d.ts ./src/*.d.ts.map"
  },
  "devDependencies": {
    "@better-fetch/fetch": "^1.1.21",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.19.27",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "jsdom": "^27.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "better-auth": "^1.4.9"
  },
  "peerDependencies": {
    "better-auth": "^1.4.9"
  },
  "type": "module",
  "files": [
    "src/*.js",
    "src/*.ts",
    "!src/*.spec.js"
  ],
  "exports": {
    ".": {
      "dev-source": "./src/index.js",
      "types": "./src/index.d.ts",
      "default": "./src/index.js"
    },
    "./client": {
      "dev-source": "./src/index.client.js",
      "types": "./src/index.client.d.ts",
      "default": "./src/index.client.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./src/index.d.ts"
      ],
      "client": [
        "./src/index.client.d.ts"
      ]
    }
  }
}
